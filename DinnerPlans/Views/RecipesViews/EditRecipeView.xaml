<UserControl x:Class="DinnerPlans.Views.RecipesViews.EditRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DinnerPlans.Views.RecipesViews"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="MinWidth" Value="50" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="MinHeight" Value="75" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5,2,5,3" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="10,0,5,0" />
        </Style>

        <Style TargetType="Grid">
            <Setter Property="Background" Value="WhiteSmoke" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        Width="300"
                        Grid.Column="0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button>Save</Button>
                    <Button>Reset</Button>
                </StackPanel>

                <Label>In Edit Recipe View</Label>

                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Label>Title</Label>
                            <TextBox Text="{Binding Path=Recipe.Title}" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label>Origin</Label>
                            <ComboBox x:Name="OriginSelector" SelectedItem="{Binding Path=Recipe.Origin}" />
                        </StackPanel>
                    </StackPanel>

                    <Label>Ingredients</Label>
                    <StackPanel Orientation="Vertical">

                        <DataGrid x:Name="Recipes"
                                  ItemsSource="{Binding Path=Recipe.Ingredients}"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  IsReadOnly="True"
                                  AlternatingRowBackground="LightBlue"
                                    AutoGenerateColumns="False">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" />
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Path=Quantity}" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button>Add</Button>
                            <Button>Remove</Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1">

                    <Label>Instructions</Label>
                    <TextBox Height="160" Width="260" Text="{Binding Path=Recipe.Instruction, Mode=TwoWay}"></TextBox>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>