<UserControl x:Class="DinnerPlans.Views.RecipesViews.EditRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DinnerPlans.Views.RecipesViews"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10, 5, 5, 5" />
            <Setter Property="MinWidth" Value="75" />
            <Setter Property="Padding" Value="2" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="10, 5, 5, 5" />
            <Setter Property="MinWidth" Value="75" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="MinHeight" Value="15" />
            <Setter Property="Margin" Value="10, 5, 5, 5" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="10,0,10,0" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="10,0,5,0" />
            <Setter Property="FontWeight" Value="ExtraBold" />
        </Style>

        <Style TargetType="Grid">
            <Setter Property="Background" Value="WhiteSmoke" />
        </Style>
    </UserControl.Resources>
    <!--<ScrollViewer VerticalScrollBarVisibility="Auto">-->
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="600" MinWidth="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">
            <Button x:Name="SaveRecipeBtn" Content="Save" Click="SaveRecipeBtn_Click" />
            <Button x:Name="ResetRecipeBtn" Content="Reset" />
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical"
                            Margin="5,15,5,5" Grid.Row="0">

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Label>Title</Label>
                            <TextBox Text="{Binding Path=Recipe.Title}" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label>Origin</Label>
                            <ComboBox x:Name="OriginSelector"
                                      SelectedItem="{Binding Path=Recipe.Origin}" />
                        </StackPanel>
                    </StackPanel>

                    <Label>Ingredients</Label>
                    <StackPanel Orientation="Vertical">

                        <DataGrid x:Name="RecipesDataGrid"
                                  ItemsSource="{Binding Path=Recipe.Ingredients}"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  IsReadOnly="False"
                                  AlternatingRowBackground="LightBlue"
                                  AutoGenerateColumns="False">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" />
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Path=QuantityGr}" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Click="Add_Ingredient_Btn_Click">Add</Button>
                            <Button Click="Remove_Ingredient_Btn_Click">Remove</Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1">

                    <Label>Instructions</Label>
                    <TextBox Height="160" Width="Auto" Text="{Binding Path=Recipe.Instruction}"
                             AcceptsReturn="True" TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>