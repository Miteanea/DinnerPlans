<Window x:Class="DinnerPlans.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinnerPlans"
        mc:Ignorable="d"
        Title="IngredientWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:Name="SelectIngredient"
              Grid.Column="0">
            <DataGrid x:Name="ExistingIngridients">
                Implement a custo Data Grid that shows nutrition
            </DataGrid>
        </Grid>

        <Grid x:Name="InputIngredient"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid x:Name="AddIngredient" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--Add Ingredient Details:
                description of ingredient -->
                <Label Grid.Column="0" Grid.Row="0">Name</Label>
                <TextBox Grid.Column="1" Grid.ColumnSpan="3" Background="Black" Margin="5"></TextBox>

                <!--calories -->
                <Label Grid.Column="0" Grid.Row="1">Calories</Label>
                <TextBox Grid.Column="1" Grid.Row="1" Background="Black" Margin="5"></TextBox>

                <!--nutrition data-->
                <Label Grid.Column="1" Grid.Row="3">Proteins</Label>
                <TextBox Grid.Column="2" Grid.Row="3" Background="Black" Margin="5"></TextBox>

                <Label Grid.Column="1" Grid.Row="4">Carbs</Label>
                <TextBox Grid.Column="2" Grid.Row="4" Background="Black" Margin="5"></TextBox>

                <Label Grid.Column="1" Grid.Row="5">Sugars</Label>
                <TextBox Grid.Column="2" Grid.Row="5" Background="Black" Margin="5"></TextBox>

                <Label Grid.Column="3" Grid.Row="3">Fats</Label>
                <TextBox Grid.Column="4" Grid.Row="3" Background="Black" Margin="5"></TextBox>

                <Label Grid.Column="3" Grid.Row="4">Satured Fats</Label>
                <TextBox Grid.Column="4" Grid.Row="4" Background="Black" Margin="5"></TextBox>

                <Label Grid.Column="5" Grid.Row="3">Salts</Label>
                <TextBox Grid.Column="6" Grid.Row="3" Background="Black" Margin="5"></TextBox>

                <!-- "Add Button" => closes the window and sends the ingredient to caller.-->
                <Button Click="Add_Ingredient_Clicked"
                        Grid.Column="5" Grid.ColumnSpan="2"
                        Grid.Row="6">
                    Add Ingredient
                </Button>
            </Grid>

            <Grid x:Name="InputNewIngredient" Grid.Row="1">
                <!--Add Ingredient Details:
                User inputs
                description of ingredient
                calories
                nutrition data
                "Add & Save" Button" => 1) Saves the ingredient to ingredient collection
                                        2)closes the window and sends the ingredient to caller.-->
            </Grid>
        </Grid>
    </Grid>
</Window>