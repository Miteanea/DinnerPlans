<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinnerPlans"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="DinnerPlans.IngredientWindow"
        mc:Ignorable="d"
        Title="IngredientWindow" Height="450" Width="800">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Foreground" Value="White" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:Name="SelectIngredient" Grid.Column="0">

            <StackPanel>
                <Button x:Name="SaveChangesBtn" Content="Save" Click="SaveIngredientChanges" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="Search By Text" />
                    <TextBox x:Name="TextFilter" Width="100" Background="Black" Margin="5" TextChanged="TextBox_TextChanged" />
                </StackPanel>

                <DataGrid x:Name="ExistingIngridients"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          IsReadOnly="False"  AutoGenerateColumns="False" AlternatingRowBackground="LightBlue">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" />
                        <DataGridTextColumn Header="Calories" Binding="{Binding Path=NutritionData.Calories}" />
                        <DataGridTemplateColumn Header="Actions">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="Add_Ingredient_Clicked" Content="Add Ingredient" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Carbs" Binding="{Binding Path=NutritionData.CarbsGr}" />
                        <DataGridTextColumn Header="Protein" Binding="{Binding Path=NutritionData.ProteinGr}" />
                        <DataGridTextColumn Header="Sugars" Binding="{Binding Path=NutritionData.SugarsGr}" />
                        <DataGridTextColumn Header="Fats" Binding="{Binding Path=NutritionData.FatsGr}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <Grid x:Name="InputIngredient"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid x:Name="AddIngredient" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--Add Ingredient Details:
                description of ingredient -->
                <Label Grid.Column="0" Grid.Row="0" Content="Name" />
                <TextBox Name="NameNewIngredient" Grid.Column="1" Grid.ColumnSpan="3" Background="Black" Margin="5" />

                <!--calories -->
                <Label Grid.Column="0" Grid.Row="1" Content="Calories" />
                <TextBox Name="CaloriesNewIngredient" Grid.Column="1" Grid.Row="1" Background="Black" Margin="5" />

                <!--nutrition data-->
                <Label Grid.Column="1" Grid.Row="3" Content="Proteins" />
                <TextBox Name="ProteinsNewIngredient" Grid.Column="2" Grid.Row="3" Background="Black" Margin="5" />

                <Label Grid.Column="1" Grid.Row="4" Content="Carbs" />
                <TextBox Name="CarbsNewIngredient" Grid.Column="2" Grid.Row="4" Background="Black" Margin="5" />

                <Label Grid.Column="1" Grid.Row="5" Content="Sugars" />
                <TextBox Name="SugarsNewIngredient" Grid.Column="2" Grid.Row="5" Background="Black" Margin="5" />

                <Label Grid.Column="3" Grid.Row="3" Content="Fats" />
                <TextBox Name="FatsNewIngredient" Grid.Column="4" Grid.Row="3" Background="Black" Margin="5" />

                <Label Grid.Column="3" Grid.Row="4" Content="Satured Fats" />
                <TextBox Name="SatFatsNewIngredient" Grid.Column="4" Grid.Row="4" Background="Black" Margin="5" />

                <Label Grid.Column="5" Grid.Row="3" Content="Salts" />
                <TextBox Name="SaltsNewIngredient" Grid.Column="6" Grid.Row="3" Background="Black" Margin="5" />

                <!-- "Add Button" => closes the window and sends the ingredient to caller.-->
                <Button Click="Add_Ingredient_Clicked"
                        Grid.Column="5" Grid.ColumnSpan="2"
                        Grid.Row="6" Content="Add Ingredient" />
            </Grid>

            <Grid x:Name="InputNewIngredient" Grid.Row="1">
                <!--Add Ingredient Details:
                User inputs
                description of ingredient
                calories
                nutrition data
                "Add & Save" Button" => 1) Saves the ingredient to ingredient collection
                                        2)closes the window and sends the ingredient to caller.
                Validate Ingredient Input
                -->
            </Grid>
        </Grid>
    </Grid>
</Window>